---
import type { IProject } from "@/types";

import Card from "@/components/cards/Card.astro";
import RichImage from "@/components/RichImage.astro";
import TechIcon from "@/components/TechIcon.astro";

import Markdown from "../Markdown.astro";

type Props = IProject & { class?: string };

const {
  title,
  description,
  technologies,
  imageSrc,
  repo,
  class: className,
  cardColor,
} = Astro.props;
---

<Card
  tag="article"
  class:list={[
    "group/project-card flex flex-col items-center overflow-hidden sm:flex-row",
    className,
  ]}
  color={cardColor}
>
  <RichImage
    src={imageSrc}
    class="h-[200px] w-full object-cover sm:shrink-0 sm:h-full sm:w-[40%]"
  />
  <div class="p-6">
    <h1 class="font-bold">{title}</h1>
    <div class="flex flex-wrap gap-1">
      {technologies.map((tech) => <TechIcon name={tech.name} class="w-4" />)}
    </div>
    <Markdown class="prose-sm">
      {description}
    </Markdown>
  </div>
</Card>
