---
import type { ITechnology } from "@/types";

import Card from "@/components/cards/Card.astro";
import RichImage from "@/components/RichImage.astro";
import TechIcon from "@/components/TechIcon.astro";

interface Props {
  title: string;
  description: string;
  technologies: Array<ITechnology>;
  imageSrc?: string;
  class?: string;
}

const {
  title,
  description,
  technologies,
  imageSrc,
  class: className,
} = Astro.props;
---

<Card
  tag="article"
  class:list={[
    "group/project-card flex flex-col items-center sm:flex-row",
    className,
  ]}
>
  <RichImage
    src={imageSrc}
    class="h-[200px] w-full object-cover sm:shrink-0 sm:h-full sm:w-[40%]"
  />
  <div class="p-6">
    <h1 class="font-bold">{title}</h1>
    <div class="flex flex-wrap gap-1">
      {technologies.map((tech) => <TechIcon name={tech.name} class="w-4" />)}
    </div>
    <p class="text-sm">{description}</p>
  </div>
</Card>
