---
import type { HTMLTag } from "astro/types";

interface Props {
  class?: string;
  tag?: HTMLTag;
  interactive?: boolean;
}

const {
  class: className,
  tag: Element = "div",
  interactive = true,
  ...restOfProps
} = Astro.props;
---

<Element
  class:list={[
    "cursor-pointer bg-surface-100 border-2 border-surface-950 shadow-[0.3rem_0.3rem] shadow-surface-500",
    {
      "transition-shadow hover:shadow-primary hover:shadow-[0.4rem_0.4rem]":
        interactive,
    },
    className,
  ]}
  {...restOfProps}
>
  <slot />
</Element>
