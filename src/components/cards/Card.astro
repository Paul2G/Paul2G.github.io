---
import type { HTMLTag } from "astro/types";

interface Props {
  class?: string;
  color?: string;
  tag?: HTMLTag;
  interactive?: boolean;
}

const {
  class: className,
  tag: Element = "div",
  color = "#ffffff",
  interactive = true,
  ...restOfProps
} = Astro.props;
---

<Element
  class:list={[
    "cursor-pointer bg-[var(--color)] border-2 border-surface-1000 shadow-[0.3rem_0.3rem] rounded-xl shadow-surface-800",
    className,
  ]}
  style={{ "--color": color }}
  {...restOfProps}
>
  <slot />
</Element>
