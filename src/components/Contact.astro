<section id="contact" class="section py-16">
  <div class="container mx-auto px-4">
    <h2 class="section-title font-mono">
      <span class="text-primary">_</span>Contact
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <div class="space-y-6">
          <p class="text-lg leading-relaxed">
            I'm always interested in hearing about new projects and opportunities. Whether you have a question or just want to say hi, I'll try my best to get back to you!
          </p>
          
          <div class="space-y-4 mt-8">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 border-2 border-secondary dark:border-tertiary flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <h3 class="font-mono font-bold">Email</h3>
                <a href="mailto:hello@example.com" class="hover:text-primary transition-colors duration-300">hello@example.com</a>
              </div>
            </div>
            
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 border-2 border-secondary dark:border-tertiary flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
              </div>
              <div>
                <h3 class="font-mono font-bold">Location</h3>
                <p>San Francisco, CA</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div>
        <form class="space-y-6" id="contact-form">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block font-mono mb-2">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full bg-transparent border-2 border-secondary dark:border-tertiary p-3 focus:border-primary outline-none transition-colors duration-300"
              />
            </div>
            
            <div>
              <label for="email" class="block font-mono mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full bg-transparent border-2 border-secondary dark:border-tertiary p-3 focus:border-primary outline-none transition-colors duration-300"
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block font-mono mb-2">Subject</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              required
              class="w-full bg-transparent border-2 border-secondary dark:border-tertiary p-3 focus:border-primary outline-none transition-colors duration-300"
            />
          </div>
          
          <div>
            <label for="message" class="block font-mono mb-2">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full bg-transparent border-2 border-secondary dark:border-tertiary p-3 focus:border-primary outline-none resize-none transition-colors duration-300"
            ></textarea>
          </div>
          
          <div>
            <button 
              type="submit"
              class="w-full py-3 font-mono font-bold border-2 border-primary bg-primary text-tertiary dark:text-secondary hover:bg-transparent hover:text-primary transition-colors duration-300"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  // Form submission logic (client-side validation example)
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Get form values
    const formData = new FormData(form as HTMLFormElement);
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const subject = formData.get('subject') as string;
    const message = formData.get('message') as string;
    
    // Here you would typically send the data to a server endpoint
    // For now, let's just show a success message
    alert(`Thanks for your message, ${name}! I'll get back to you soon.`);
    
    // Reset the form
    (form as HTMLFormElement).reset();
  });
</script>

<style>
  input, textarea {
    font-family: 'Space Mono', monospace;
    transition: all 0.3s ease;
  }
  
  input:focus, textarea:focus {
    box-shadow: 4px 4px 0 var(--primary);
    transform: translate(-4px, -4px);
  }
</style>