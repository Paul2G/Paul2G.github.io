---
import showdown from "showdown";
import type { HTMLTag } from "astro/types";

interface Props {
  class?: string;
  tag?: HTMLTag;
  content: string;
}

interface Slots {
  markdown: string;
}

const { class: className, tag: Element = "div", content = "" } = Astro.props;

const converter = new showdown.Converter();
const html = converter.makeHtml(content);
---

<Element class:list={[className]} set:html={html} />
