---
import type { ITechnology } from "../types";
import TechIcon from "./TechIcon.astro";

interface Props {
  title: string;
  description: string;
  technologies: Array<ITechnology>;
  imagePath?: string;
}

const { title, description, technologies, imagePath } = Astro.props;
---

<article class="flex items-center rounded-xl shadow overflow-hidden">
  <img src={imagePath} class="w-[40%] object-cover" />
  <div class="p-6">
    <h1 class="font-bold">{title}</h1>
    <div class="flex flex-wrap gap-1">
      {technologies.map((tech) => <TechIcon name={tech.name} class="w-4" />)}
    </div>
    <p class="text-sm">{description}</p>
  </div>
</article>
