---
import { headerMenu } from "../data/navigation";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header
  class={`sticky top-0 z-[100] w-full flex justify-center px-4 bg-surface-50 border-b border-surface-950 ${className}`}
>
  <div class="container flex justify-between">
    <div class="flex items-streetch gap-6">
      <div class="hover:text-primary-600">
        <a href="#" class="h-full w-full flex items-center">
          <h1 class="text-2xl font-black">paul2g.dev</h1>
        </a>
      </div>
      <nav>
        <ul class="h-full flex">
          {
            headerMenu.map((item) => (
              <li class="">
                <a
                  href={item.to}
                  class="h-full w-full flex items-center px-6 uppercase text-sm"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
    <div class="flex items-center gap-1">
      <span> (y) </span>
    </div>
  </div>
</header>
