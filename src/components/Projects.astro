---
const projects = [
  {
    title: "Project One",
    description: "A modern web application built with React and Node.js that helps users manage their daily tasks and increase productivity.",
    tags: ["React", "Node.js", "MongoDB", "Express"],
    image: "https://images.pexels.com/photos/577585/pexels-photo-577585.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "#"
  },
  {
    title: "Project Two",
    description: "An e-commerce platform developed with Vue.js and Firebase, featuring real-time updates and a responsive design.",
    tags: ["Vue.js", "Firebase", "Tailwind CSS", "Stripe"],
    image: "https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "#"
  },
  {
    title: "Project Three",
    description: "A mobile application built with React Native that allows users to track their fitness goals and monitor their progress.",
    tags: ["React Native", "Redux", "Firebase", "Expo"],
    image: "https://images.pexels.com/photos/1181244/pexels-photo-1181244.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    link: "#"
  }
];
---

<section id="projects" class="section py-16">
  <div class="container mx-auto px-4">
    <h2 class="section-title font-mono">
      <span class="text-primary">_</span>Projects
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div class="project-card border-4 border-secondary dark:border-tertiary hover:border-primary transition-colors duration-300 group">
          <div class="relative overflow-hidden">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute top-0 left-0 w-full h-full bg-secondary/80 dark:bg-tertiary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
              <a href={project.link} class="px-4 py-2 bg-primary text-white font-mono font-bold">View Project</a>
            </div>
          </div>
          
          <div class="p-4 border-t-4 border-secondary dark:border-tertiary group-hover:border-primary transition-colors duration-300">
            <h3 class="text-xl font-bold font-mono mb-2">{project.title}</h3>
            <p class="mb-4">{project.description}</p>
            
            <div class="flex flex-wrap gap-2">
              {project.tags.map(tag => (
                <span class="text-xs font-mono py-1 px-2 bg-secondary dark:bg-tertiary text-tertiary dark:text-secondary">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="#" 
        class="inline-block px-6 py-3 font-mono font-bold border-2 border-secondary dark:border-tertiary hover:border-primary hover:text-primary transition-colors duration-300"
      >
        View More Projects
      </a>
    </div>
  </div>
</section>

<style>
  .project-card {
    position: relative;
    transition: transform 0.3s ease;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
  }
</style>