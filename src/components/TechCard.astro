---
import type { ITechnology } from "../types";
import Card from "./Card.astro";
import TechIcon from "./TechIcon.astro";

type Props = ITechnology;

const { name, docsUrl, color } = Astro.props;
---

<Card
  class:list={["group/tech-card relative !aspect-square p-6 overflow-hidden"]}
>
  <a href={docsUrl} target="_blank">
    <TechIcon name={name} />
  </a>
  <div
    class:list={[
      "absolute bottom-0 z-10 w-full -translate-x-6 translate-y-[100%] transition-all group-hover/tech-card:translate-y-0",
      "text-center bg-accent-500/20",
    ]}
  >
    {name}
  </div>
</Card>
