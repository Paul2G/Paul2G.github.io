---
import type { HTMLTag } from "astro/types";

interface Props {
  class?: string;
  tag?: HTMLTag;
}

const { class: className, tag: Element = "div", ...restOfProps } = Astro.props;
---

<Element
  class:list={[
    "cursor-pointer border border-surface-950 shadow-[0.25rem_0.25rem] shadow-primary hover:shadow-accent",
    className,
  ]}
  {...restOfProps}
>
  <slot />
</Element>
