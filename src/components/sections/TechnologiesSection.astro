---
import Typography from "../Typography.astro";
import TechIcon from "../TechIcon.astro";

import { technologies } from "../../data/technologies";
---

<section id="skills" class="w-full max-w-screen-lg flex flex-col gap-8">
  <Typography variant="title">Tecnolgias</Typography>
  <div class="grid grid-cols-12">
    {
      technologies.map((tech) => (
        <TechIcon name={tech.name} class:list={[tech.class]} />
      ))
    }
  </div>
</section>
